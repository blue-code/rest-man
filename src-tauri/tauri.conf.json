{
  "build": {
    "beforeDevCommand": "npm run dev --prefix webui",
    "beforeBuildCommand": "npm run build --prefix webui",
    "devPath": "http://localhost:1420",
    "distDir": "../webui/dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "restman",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$HOME/**",
          "$DOWNLOAD/**",
          "$DESKTOP/**"
        ]
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      }
    },
    "windows": [
      {
        "title": "RestMan",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.restman.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png",
        "icons/icon.ico"
      ]
    }
  }
}